{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "quotemark": [true, "single", "jsx-double"],
        "semicolon": false,
        "interface-over-type-literal": false,
        "interface-name": false,
        "curly": [true, "ignore-same-line"],
        "jsx-boolean-value": false
    }
}